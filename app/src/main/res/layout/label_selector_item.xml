<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ChickBgEffect"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/label_selector_dialog_list_item_height"
    android:minHeight="@dimen/label_selector_dialog_list_item_height">

    <CheckBox
        android:id="@+id/label_select_list_item_checkbox"
        android:layout_width="@dimen/label_selector_dialog_checkbox_width"
        android:layout_height="@dimen/label_selector_dialog_list_item_height"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:clickable="false" />

    <TextView
        android:id="@+id/label_select_list_item_text"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/label_selector_dialog_list_item_height"
        android:layout_toLeftOf="@id/label_select_list_item_checkbox"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/label_selector_dialog_padding_left"
        android:textColor="@color/label_selector_dialog_list_item_text_color"
        android:textSize="@dimen/label_selector_dialog_list_item_text_size" />
</RelativeLayout>