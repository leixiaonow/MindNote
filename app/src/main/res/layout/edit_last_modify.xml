<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/last_parent"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/edit_last_modify_height"
    android:layout_marginLeft="@dimen/edit_last_horizontal_margin"
    android:layout_marginRight="@dimen/edit_last_horizontal_margin"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:tag="last_modify">

    <TextView
        android:id="@+id/signature"
        android:text="雷枭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:gravity="end"
        android:textColor="#80000000"
        android:textSize="@dimen/edit_last_modify_font_size" />

    <TextView
        android:id="@id/last_modify"
        android:text="2016-4-11 00:00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:gravity="end"
        android:textColor="#80000000"
        android:textSize="@dimen/edit_last_modify_font_size" />

</LinearLayout>